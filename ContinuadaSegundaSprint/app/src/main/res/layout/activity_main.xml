<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/tv_solicitacao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/solicitação"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:layout_marginTop="20dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <EditText
                android:id="@+id/et_numero1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/edit_text"
                android:textSize="20sp"/>

            <EditText
                android:id="@+id/et_numero2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/edit_text"
                android:textSize="20sp"
                android:layout_marginStart="40sp"/>

        </LinearLayout>

        <Button
            android:id="@+id/btn_comprar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:onClick="comprar"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_dog1"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/cachorro_feliz"
                android:layout_marginEnd="10dp"/>

            <ImageView
                android:id="@+id/img_dog2"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/outro_cachorro_feliz"/>

        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>